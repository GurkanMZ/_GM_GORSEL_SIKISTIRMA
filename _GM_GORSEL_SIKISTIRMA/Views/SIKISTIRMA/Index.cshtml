<head>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        #dropSection {
            height: 300px;
            width: 600px;
            background-color: skyblue;
        }

        #btnUpload {
            display: none;
        }

        .active {
            background-color: yellow !important;
        }
    </style>
</head>
<body>
    <div class="container text-center">

        <h5>Gürkan MIZRAK</h5>

        <div id="dropSection">
        </div>
        <br />
        Eklenen Dosyalar:
        <hr />
        <div id="uploadedFiles">
        </div>
        <input type="button" id="btnUpload" value="Upload" />
        <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>

        <script src="~/Content/Script/jquery.filedrop.js"></script>
        <script type="text/javascript">
        $(function () {
            $("#dropSection").filedrop({
                fallback_id: 'btnUpload',
                fallback_dropzoneClick: true,
                url: '@Url.Action("Upload")',
                allowedfileextensions: ['.doc', '.docx', '.pdf', '.jpg', '.jpeg', '.png', '.gif'],
                paramname: 'fileData',
                maxfilesize: 14,
                maxfiles: 14,
                dragOver: function () {
                    $('#dropSection').addClass('active');
                },
                dragLeave: function () {
                    $('#dropSection').removeClass('active');
                },
                drop: function () {
                    $('#dropSection').removeClass('active');
                },
                uploadFinished: function (i, file, response, time) {
                    $('#uploadedFiles').append(file.name + '<br />')
                },
                afterAll: function (e) {                    
                }

            })
        })
        </script>






    </div>
</body>




